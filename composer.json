{
    "name": "gustavofabiane/framework",
    "description": "Descrição do projeto framework.",
    "authors": [
        {
            "name": "Gustavo Fabiane",
            "email": "gustavfabiane@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Framework\\Container\\": "src/container/src/",
            "Framework\\Http\\": "src/http/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "psr/container": "1.0.0",
        "psr/http-message": "1.0.1",
        "psr/http-server-handler": "1.0.0",
        "psr/http-server-middleware": "1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "replace": {
        "gustavofabiane/container": "self.version",
        "gustavofabiane/http": "self.version"
    },
    "scripts": {
        "test": [
            "vendor\\bin\\phpunit"
        ],
        "update-split-bb": [
            "build\\subsplit-bit-bucket.sh"
        ]
    }
}
